{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "dist",
    "noImplicitAny": true,
    "paths": {
      "app/*": ["./server/app/*"],
      "config/*": [".server/config/*"],
      "controllers/*": ["./server/controllers/*"]
    }
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "views",
    "public",
    "bin",
    "dist",
    "client"
  ],
  "types": [
    "node"
  ]
}